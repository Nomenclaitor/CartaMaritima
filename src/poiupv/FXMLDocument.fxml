                        <ImageView fx:id="anglePortractor" fitHeight="410.0" fitWidth="410.0" opacity="0.6" pickOnBounds="true" preserveRatio="true" visible="false">
                           <image>
                              <Image url="@../resources/transportador.png" />
                           </image>
                        </ImageView>
                     </children>
                  </StackPane>
               </children>
            </StackPane>
         </items>
      </SplitPane>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Label fx:id="posicion" minHeight="-Infinity" minWidth="-Infinity" text="SceneX:     ScenY:     " wrapText="true" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets bottom="12.0" right="12.0" top="6.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
