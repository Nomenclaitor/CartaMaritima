                              <Insets left="20.0" top="10.0" />
                           </HBox.margin>
                           <graphic>
                              <ImageView fx:id="cancelButtonImage" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imgData/cancelBlue.png" />
                                 </image></ImageView>
                           </graphic>
                           <font>
                              <Font name="Arial Rounded MT Bold" size="12.0" />
                           </font>
                        </Button>
                        <Region HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Region>
                        <Button fx:id="verifyButton" mnemonicParsing="false" onAction="#verifyPressed" style="-fx-background-color: #0685bc; -fx-background-radius: 10;" text="Verificar respuesta" textFill="WHITE">
                           <HBox.margin>
                              <Insets right="20.0" top="10.0" />
                           </HBox.margin>
                           <graphic>
                              <ImageView fx:id="veirfyButonImage" fitHeight="34.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imgData/whiteCheck.png" />
                                 </image></ImageView>
                           </graphic>
                           <font>
                              <Font name="Arial Rounded MT Bold" size="12.0" />
                           </font>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox prefHeight="40.0" prefWidth="200.0">
                     <children>
                        <ToggleButton fx:id="lineButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#mapOptionSelect" HBox.hgrow="ALWAYS">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imgData/lineLogo.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <toggleGroup>
                              <ToggleGroup fx:id="mapGroup" />
                           </toggleGroup>
                        </ToggleButton>
                        <ToggleButton fx:id="gridPressed" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#mapOptionSelect" toggleGroup="$mapGroup" HBox.hgrow="ALWAYS">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imgData/arcLogo.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </ToggleButton>
                     </children>
                  </HBox>
                  <HBox prefHeight="40.0" prefWidth="200.0">
                     <children>
                        <ToggleButton fx:id="pointButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#mapOptionSelect" toggleGroup="$mapGroup" HBox.hgrow="ALWAYS">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imgData/pointLogo.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </ToggleButton>
                        <ToggleButton fx:id="textButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#mapOptionSelect" toggleGroup="$mapGroup" HBox.hgrow="ALWAYS">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imgData/testLogo.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </ToggleButton>
                     </children>
                  </HBox>
                  <HBox prefHeight="40.0" prefWidth="200.0">
                     <children>
                        <ToggleButton fx:id="cursorButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#mapOptionSelect" toggleGroup="$mapGroup" HBox.hgrow="ALWAYS">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imgData/cursorLogo.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </ToggleButton>
                        <ToggleButton fx:id="anglerToggler" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#mapOptionSelect" toggleGroup="$mapGroup" HBox.hgrow="ALWAYS">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../imgData/angler.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </ToggleButton>
                     </children>
                  </HBox>
                  <Label maxWidth="1.7976931348623157E308" text="Opciones de puntos" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets top="4.0" />
                     </VBox.margin>
                  </Label>
                  <HBox prefHeight="60.0" prefWidth="200.0">
                     <children>
                        <ColorPicker fx:id="colorPicker" maxWidth="1.7976931348623157E308" prefHeight="40.0" HBox.hgrow="ALWAYS">
                           <value>
                              <Color red="1.0" />
                           </value></ColorPicker>
                        <ToggleButton fx:id="fillerButton" maxHeight="40.0" maxWidth="80.0" mnemonicParsing="false">
                           <graphic>
                              <Circle accessibleRole="BUTTON" fill="#0685bc" radius="5.0" stroke="BLACK" strokeType="INSIDE" />
                           </graphic>
                        </ToggleButton>
                     </children>
                  </HBox>
                  <HBox prefHeight="20.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="incSizeButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#incSize" text="-" wrapText="true" HBox.hgrow="ALWAYS" />
                        <Slider fx:id="sizeSlider" blockIncrement="1.0" majorTickUnit="2.0" max="20.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" min="1.0" minorTickCount="1" value="10.0" HBox.hgrow="ALWAYS" />
                        <Button fx:id="decSizeButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#decSize" text="+" wrapText="true" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <ChoiceBox fx:id="shapeChoiceBox" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
                  <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="240.0" prefWidth="90.0" VBox.vgrow="ALWAYS" />
                  <HBox prefHeight="100.0" prefWidth="200.0" />
               </children>
            </VBox>
            <StackPane prefHeight="1080.0" prefWidth="1920.0">
               <children>
                  <ScrollPane fx:id="map_scrollpane" maxHeight="5760.0" maxWidth="8960.0" pannable="true" prefHeight="1080.0" prefWidth="1920.0">
                     <content>
                        <Pane>
                           <children>
                              <ImageView onMouseDragged="#mapDragged" onMousePressed="#mapPressed" onMouseReleased="#mapReleased" pickOnBounds="true">
                                 <image>
                                    <Image url="@../resources/carta_nautica.jpg" />
                                 </image>
                              </ImageView>
                           </children>
                        </Pane>
                     </content>
                  </ScrollPane>
                  <StackPane fx:id="anglerPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseDragged="#anglerDragged" onMousePressed="#anglerClicked" prefHeight="410.0" prefWidth="410.0">
